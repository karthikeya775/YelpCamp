<% layout('layouts/boilerplate')%>

    <h1>All Campgrounds</h1>

        <% for(let camp of camps) { %>

            <div class="card">

                 <div class="row">

                    <div class="col-md-4">
                         <img class="img-fluid" src="<%= camp.img %>">
                    </div>

                    <div class="col-md-8">

                        <div class="card-body">

                            <h5 class="card-title"><%= camp.title %></h5>
                            <p class="card-text"><%= camp.description %></p>
                            <p class="card-text">Price: <%= camp.price %></p>
                            <p class="card-text">
                                <small class="text-muted"><%= camp.location %></small>
                            </p>
                            <a class="btn btn-primary" href="/campgrounds/<%= camp._id %>">View <%= camp.title %></a>
                        </div>
                    </div>
                    
            </div>
         
        <% } %>

    

     <footer>

        <a href="/campgrounds/new">New CampGround</a>
     </footer>
